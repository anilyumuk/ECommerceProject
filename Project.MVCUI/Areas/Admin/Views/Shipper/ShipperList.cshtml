@model List<Shipper>
@{
    ViewBag.Title = "ShipperList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Kategori eklemek icin @Html.ActionLink("Tıklayınız", "AddShipper")</h3>
<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>Kargo Adresi</th>
                    <th class="hidden-phone">Durum</th>
                    <th class="hidden-phone">Sil</th>
                    <th class="hidden-phone">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Shipper item in Model)
                {
                    <tr class="gradeX">
                        <td>@Html.ActionLink(item.Address, "ShipperList", "Shipper", new { id = item.ID }, null)</td>
                        <td>
                            @item.Address
                        </td>
                        <td class="hidden-phone">@item.Status</td>
                        <td class="center hidden-phone">
                            @Html.ActionLink("Sil", "DeleteShipper", new { id = item.ID }, new { @class = "btn btn-danger" })
                    </td>
                    <td class="center hidden-phone">@Html.ActionLink("Güncelle", "UpdateShipper", new { id = item.ID }, new { @class = "btn btn-warning" })</td>
                </tr>
            }


            </tbody>
        </table>
    </div>
</div>


@model Order
@{
    ViewBag.Title = "AddOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .genislik {
        width: 300px;
    }
</style>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Siparis Ekleme sayfası
                </header>
                <div class="panel-body">

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">İsim</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.ShippedAddress, new { @class = "form-control genislik", placeholder = "Adres ismini giriniz" })

                        </div>
                    </div>
                    <br /> <br />
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Acıklama</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control genislik", placeholder = "Kullanıcı İsmini Giriniz" })


                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">İsim</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.TotalPrice, new { @class = "form-control genislik", placeholder = "Ucret Degerini Griniz" })

                        </div>
                       
                            <br /> <br />

                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Ekle</label>
                                <div class="col-sm-10">
                                    <button class="btn btn-primary">Siparis ekle</button>


                                </div>
                            </div>


                        </div>
</section>

        </div>
    </div>
}


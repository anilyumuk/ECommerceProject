@model AppUser
@{
    ViewBag.Title = "AddAppUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .genislik {
        width: 300px;
    }
</style>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Kullanıcı Ekleme sayfası
                </header>
                <div class="panel-body">

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">İsim</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control genislik", placeholder = "Kullanıcı İsmini giriniz" })

                        </div>
                    </div>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control genislik", placeholder = "Kullanıcı Şifresi giriniz" })

                    </div>
                    <br /> <br />
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Acıklama</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x =>x.Email, new { @class = "form-control genislik", placeholder = "Email giriniz" })


                        </div>
                    </div>
                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Ekle</label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Kullanıcı ekle</button>


                        </div>
                    </div>


                </div>
            </section>

        </div>
    </div>
}

